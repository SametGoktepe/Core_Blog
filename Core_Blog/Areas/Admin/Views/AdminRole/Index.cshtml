@using EntityLayer.Concrete
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<html>
<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Roles</h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Role Name</th>
                                    <td>Edit</td>
                                    <td>Delete</td>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <th>@item.Id</th>
                                        <td>@item.Name</td>
                                        <td><a href="/Admin/AdminRole/UpdateRole/@item.Id" class="btn btn-outline-warning">Edit</a></td>
                                        <td><a href="/Admin/AdminRole/DeleteRole/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                        <a href="/Admin/AdminRole/AddRole" class="btn btn-success">Add New Role</a>
                        <a href="/Admin/AdminRole/UserRoleList/" class="btn btn-dark">User Roles</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

