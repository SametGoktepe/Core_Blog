@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@*<td><a href="#"><i class="fa fa-check text-navy"></i></a></td>*@
<!DOCTYPE html>
<html>
<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Comment's</h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>User</th>
                                    <th>Title</th>
                                    <th>Blog</th>
                                    <th>Score</th>
                                    <th>Date</th>
                                    <td>Edit</td>
                                    <td>Delete</td>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>@item.CommentID</td>
                                        <td>@item.CommentUserName</td>
                                        <td>@item.CommentTitle</td>
                                        <td>@item.Blog.BlogTitle</td>
                                        <td class="text-navy"><i class="fa fa-level-down">@item.BlogScore</i></td>
                                        <td>@(((DateTime)item.CommentDate).ToString("dd-MM-yyyy"))</td>
                                        <td><a href="#" class="btn btn-outline-warning">Edit</a></td>
                                        <td><a href="#" class="btn btn-outline-danger">Delete</a></td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


