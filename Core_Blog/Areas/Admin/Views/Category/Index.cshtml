@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Category List</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Make Passive</th>
        <th>Make Active</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <th>@item.CategoryName</th>
            <th><a href="/Admin/Category/DeleteCategory/@item.CategoryID/" id="deletebtn" onclick="return confirm('Do you want delete')" class="btn btn-lg btn-danger">Make Passive</a></th>
            <th><a href="" class="btn btn-lg btn-info">Make Active</a></th>
            <th><a href="" class="btn btn-lg btn-success">Edit</a></th>
        </tr>
    }
</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-lg btn-dark">Add Category</a>
<br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index",new { page}))

