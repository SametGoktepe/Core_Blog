@using EntityLayer.Concrete
@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">


<body>
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">About</h3>
            <div class="row inner-sec">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    <div class="blog-grid-top">
                        @foreach (var item in Model)
                        {
                            <div class="blog_info_left_grid">
                                <a href="#">
                                    <img src="@item.AboutImage1" class="img-fluid" alt="">
                                </a>
                            </div>
                            <h3>
                                ABOUT US & OUR MISSON'S
                            </h3>

                            <p>
                                @item.AboutDetail1
                            </p>
                        }

                        <a href="/Blog/Index" class="btn btn-primary read-m">Return Blogs</a>
                    </div>
                </div>
                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <img src="~/template/web/images/banner1.jpg" class="img-fluid" alt="">
                        </div>
                        @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")
                        @await Html.PartialAsync("~/Views/About/SocialMedia.cshtml")
                        @await Component.InvokeAsync("AuthorLastBlog")
                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>
</body>

</html>

