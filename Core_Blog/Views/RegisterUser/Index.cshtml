@model UserSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Register</title>

    <link href="~/inspinia-admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia-admin/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/inspinia-admin/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/inspinia-admin/css/animate.css" rel="stylesheet">
    <link href="~/inspinia-admin/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">BLG+</h1>

            </div>
            <h3>Register</h3>
            <p>Create account.</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="@Model.Name_Surname" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.Name_Surname" placeholder="Name & Surname">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="UserName">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                    <input type="email" class="form-control" asp-for="@Model.Mail" placeholder="Email">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Password">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password">
                </div>
                @*<div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox" asp-for="IsAcceptTheContract"><i></i> Agree the terms and policy </label></div>
                </div>*@
                <button type="submit" class="btn btn-primary block full-width m-b" >Register</button>

                <p class="text-muted text-center"><small>Already have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Login/Index/">Login</a>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            </form>
            <p class="m-t"> <small>All Terms is Hidden &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/inspinia-admin/js/jquery-3.1.1.min.js"></script>
    <script src="~/inspinia-admin/js/popper.min.js"></script>
    <script src="~/inspinia-admin/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/inspinia-admin/js/plugins/iCheck/icheck.min.js"></script>
    <script>$(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>

