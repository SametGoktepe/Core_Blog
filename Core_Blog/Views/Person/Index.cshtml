@using Core_Blog.Controllers
@model List<Class1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>
            #
        </th>
        <th>
            Name
        </th>
        <th>
            Delete
        </th>
        <th>
            Edit
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td><a href="/Person/DeletePerson/@item.Id" class="btn btn-danger">Delete</a></td>
            <td><a href="/Person/UpdatePerson/@item.Id" class="btn btn-warning">Edit</a></td>
        </tr>
    }
</table>
<br />
<a href="/Person/AddPerson/" class="btn btn-primary">New Person</a>
