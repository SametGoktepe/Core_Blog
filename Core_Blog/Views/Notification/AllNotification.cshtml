@using EntityLayer.Concrete
@model List<Notification>
@{
    ViewData["Title"] = "AllNotification";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1>Notification's</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Notification</th>
                        <th>Date</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.NotificationID</td>
                            <td>@item.NotificationDetail</td>
                            <td>@item.NotificationDate.ToShortDateString()</td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>

<script src="~/writer/assets/vendors/js/vendor.bundle.base.js"></script>
<script src="~/writer/assets/js/off-canvas.js"></script>
<script src="~/writer/assets/js/hoverable-collapse.js"></script>
<script src="~/writer/assets/js/misc.js"></script>
