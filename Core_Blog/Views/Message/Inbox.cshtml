@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1>Inbox</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Subject</th>
                        <th>Sender</th>
                        <th>Date</th>
                        <th>Open Message</th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.MessageID</td>
                            <td>@item.Subject</td>
                            <td>@item.SenderUser.AuthorName</td>
                            <td>@(((DateTime)item.MessageDate).ToString("dd-MM-yyyy"))</td>
                            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-gradient-success">Open Message</a></td>
                        </tr>
                    </tbody>
                }
            </table>
            <a href="/Message/SendMessage" class="btn btn-gradient-primary">New Message</a>
        </div>
    </div>
    <script src="~/writer/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/writer/assets/js/off-canvas.js"></script>
    <script src="~/writer/assets/js/hoverable-collapse.js"></script>
    <script src="~/writer/assets/js/misc.js"></script>
</div>

