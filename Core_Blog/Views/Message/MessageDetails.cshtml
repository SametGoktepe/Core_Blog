@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Message Details</h1>
<br />
@Html.Label("No")
@Html.TextBoxFor(x => x.MessageID, new { @class = "form-control", @readonly = "readonly" })
<br />
@Html.Label("Subject")
@Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @readonly = "readonly" })
<br />
@Html.Label("Details")
@Html.TextAreaFor(x => x.MessageDetails, 25, 5, new { @class = "form-control", @readonly = "readonly" })
<br />
<a class="btn btn-gradient-light" href="/Message/Inbox">Return Message's</a>
<script src="~/writer/assets/vendors/js/vendor.bundle.base.js"></script>
<script src="~/writer/assets/js/off-canvas.js"></script>
<script src="~/writer/assets/js/hoverable-collapse.js"></script>
<script src="~/writer/assets/js/misc.js"></script>

